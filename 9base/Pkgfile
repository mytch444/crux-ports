# Description: Port of various plan9 tools for unix.
# URL: http://tools.suckless.org/9base
# Packager: mytchel at openmailbox dot org
# Depends on: 

name=9base
version=6
release=1
source=(http://dl.suckless.org/tools/9base-$version.tar.gz)

build() {
	cd $name-$version

	for f in $(find . -name Makefile; find . -name "*.mk"); do
		sed "s/man1/manp1/g" $f > tmp
		mv tmp $f
	done

	make
	make DESTDIR=$PKG \
	     MANPREFIX=/usr/man \
	     install
}

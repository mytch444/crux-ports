# Description: Simple utility to show a message.
# URL: http://github.com/mytch444/showmessage
# Maintainer: Mytchel Hammond, mytchel at openmailbox dot org
# Packager: Mytchel Hammond, mytchel at openmailbox dot org
# Depends on: xorg-server xorg-libxft xorg-libxrender freetype fontconfig

name=showmessage
version=1.0.1
release=2
source=(https://github.com/mytch444/showmessage/archive/4e8c9bc0bbf697d51b5827183bcea8ca0275be07.zip)

build() {
	cd $name-4e8c9bc0bbf697d51b5827183bcea8ca0275be07

	make

	install -m 0755 -D $name $PKG/usr/bin/$name
	install -m 0755 -D showtime $PKG/usr/bin/showtime
}
